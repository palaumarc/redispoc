<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>REDIS PoC</display-name>
    
    <!-- dispatcher: Punto de entrada de la aplicaci칩n. Procesa las peticiones.
    buscar치 por defecto su definici칩n en un archivo que sea (servlet-name)-servlet.xml,
    en este caso apiexterna-servlet.xml    -->
    <servlet>
        <servlet-name>redispoc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>  
    </servlet>   
    
    <!-- dispatcher atender치 todas las peticiones que lleguen mapeadas con '/' -->
    <servlet-mapping>
        <servlet-name>redispoc</servlet-name>
        <url-pattern>/</url-pattern> 
    </servlet-mapping>

</web-app>
